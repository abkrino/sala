<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgraound_header">

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/nav_header_height"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/imageViewHeader"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:contentDescription="@string/nav_header_desc"
            app:civ_border_color="#BCffffff"
            app:civ_border_width="4dp"
            app:srcCompat="@drawable/ic_launcher_round" />

        <TextView
            android:id="@+id/nameHeadr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/naskh1"
            android:gravity="start"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="ADASD"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/White_White" />

        <TextView
            android:id="@+id/numberheadr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/White_White" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPaid"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="end|center"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_aler"
            android:fontFamily="@font/naskh"
            android:padding="7dp"
            android:text="مميز"
            android:textColor="@color/White_White"
            android:textSize="@dimen/FontSizeView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/DatePaid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/naskh"
                android:gravity="start"
                android:padding="7dp"
                android:text="15/2"
                android:textColor="@color/White_White"
                android:textSize="@dimen/FontSizeView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/naskh"
                android:gravity="start"
                android:padding="7dp"
                android:text="تاريخ الأنتهاء :"
                android:textColor="@color/White_White"
                android:textSize="@dimen/FontSizeView" />


        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
