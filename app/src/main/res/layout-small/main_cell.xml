<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nameProuduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="3"
        android:background="@drawable/cell_bg3"
        android:fontFamily="@font/naskh1"
        android:textSize="@dimen/FontSizeView"
        android:gravity="center"
        android:maxLines="1"
        android:padding="10dp"
        android:text="الاسم"
        android:textColor="@color/White_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/priceC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1.5"
        android:background="@drawable/cell_bg2"
        android:fontFamily="@font/naskh1"
        android:gravity="center"
        android:padding="10dp"
        android:text="السعر"
        android:textSize="@dimen/FontSizeView"
        android:textColor="@color/White_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="211dp" />

    <TextView
        android:id="@+id/discountC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1.5"
        android:background="@drawable/cell_bg"
        android:fontFamily="@font/naskh1"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="@dimen/FontSizeView"
        android:text="الخصم"
        android:textColor="@color/White_White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/btDelet"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:visibility="gone" />

</LinearLayout>