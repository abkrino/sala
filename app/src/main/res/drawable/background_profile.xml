<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dd"
    >
    <item android:drawable="@color/colorPrimary"/>
    <item>
        <bitmap android:src="@drawable/sala"

            android:gravity="center" android:alpha="0.3"/>
    </item>

    <item android:top="250dp"
        android:bottom="-300dp"
        android:left="0dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/White_White"/>
            </shape>
        </rotate>
    </item>
</layer-list>